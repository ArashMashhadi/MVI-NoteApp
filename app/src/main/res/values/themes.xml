<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MviNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#F3EFEF</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BackgroundPage">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Widget.AppCompat.ActionBar" parent="Theme.AppCompat.Light">
        <item name="android:background">#F3EFEF</item>
        <item name="titleTextColor">@color/black</item>
        <item name="tint">@color/black</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>
</resources>